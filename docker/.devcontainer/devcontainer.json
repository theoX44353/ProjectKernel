// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/typescript-node
{
	"name": "Node.js & TypeScript",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/typescript-node:1-22-bullseye",
	"features": {
		"ghcr.io/stuartleeks/dev-container-features/add-host:1": {},
		"ghcr.io/flexwie/devcontainer-features/op:1": {},
		"ghcr.io/wxw-matt/devcontainer-features/command_runner:0": {},
		"ghcr.io/wxw-matt/devcontainer-features/script_runner:0": {},
		"ghcr.io/nikiforovall/devcontainer-features/dotnet-csharpier:1": {},
		"ghcr.io/juan-ayala/devcontainer-features/aem-lts:1": {},
		"ghcr.io/ait-assistive-autonomous-systems/devcontainer_features/add-groups:0": {
			"addGroups": "4(adm),24(cdrom),27(sudo),30(dip),46(plugdev),116(lpadmin),999(docker)",
			"excludeGroups": "file://.devcontainer/exclude_host_groups"
		},
		"ghcr.io/devcontainers-extra/features/act:1": {
			"version": "latest"
		},
		"ghcr.io/devcontainers-extra/features/actionlint:1": {
			"version": "latest"
		},
		"ghcr.io/devcontainers-extra/features/activemq-sdkman:2": {
			"version": "latest",
			"jdkVersion": "latest",
			"jdkDistro": "open"
		},
		"ghcr.io/devcontainers-extra/features/akamai-cli:1": {
			"version": "latest"
		},
		"ghcr.io/devcontainers-extra/features/jmeter-sdkman:2": {
			"version": "latest",
			"jdkVersion": "latest",
			"jdkDistro": "ms"
		},
		"ghcr.io/devcontainers-extra/features/tomcat-sdkman:2": {
			"version": "latest",
			"jdkVersion": "latest",
			"jdkDistro": "ms"
		},
		"ghcr.io/dotnet/aspire-devcontainer-feature/dotnetaspire:1": {
			"version": "latest"
		}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"mischelebuha.cmake-extension-pack",
				"ms-edgedevtools.vscode-edge-devtools"
			]
		}
	}

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "yarn install",

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
